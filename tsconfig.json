{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/_page.mdx",
    "app/(blog)/webapi/css/page.mdx",
    "app/(blog)/library/react/page.mdx",
    "components/tiles/webTileProps.tsx",
    "components/code/sandbox/preset/partialApplicationPlugin.js",
    "components/code/sandbox/preset/babelAsyncDo.js",
    "eslint.config.js"
  ],
  "exclude": ["node_modules"]
}
